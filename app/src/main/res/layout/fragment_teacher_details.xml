<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacherRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingStart="50dp"
        android:paddingTop="16dp"
        android:paddingEnd="50dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/aldrich"
            android:text="add your classes"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/teacherClass"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/et_style"
            android:gravity="center"
            android:hint="Classes"
            android:inputType="textCapCharacters"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="#2E2222"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="Ex: 18CSE-A"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="right">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addChip"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ED625D"
                android:text="add"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextTeacher"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/buttonColor"
                android:text="next"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--            <com.google.android.material.chip.Chip-->
            <!--                android:id="@+id/chip"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                app:closeIcon="@drawable/close"-->
            <!--                app:closeIconVisible="true"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:backgroundTint="#DC9797"-->
            <!--                android:fontFamily="@font/rubik_medium"-->
            <!--                android:inputType="textCapCharacters"-->
            <!--                android:text="18CSE-A"-->
            <!--                android:textColor="@color/white" />-->

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>
</LinearLayout>